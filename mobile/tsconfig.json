{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": false,
    "types": []
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "app/**/__tests__/**",
    "app/**/*.test.ts",
    "app/**/*.test.tsx",
    "jest.setup.js",
    "jest.config.js"
  ]
}
