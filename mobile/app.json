{
  "expo": {
    "name": "SatsConnect",
    "slug": "satsconnect",
    "version": "1.0.0",
    "scheme": "satsconnect",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.satsconnect.wallet",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "SatsConnect needs camera access to scan QR codes for Bitcoin payments",
        "NSFaceIDUsageDescription": "SatsConnect uses Face ID for secure authentication",
        "NSMicrophoneUsageDescription": "SatsConnect may need microphone access for enhanced security features",
        "NSLocationWhenInUseUsageDescription": "SatsConnect may use location for enhanced security features",
        "UIBackgroundModes": ["background-fetch", "background-processing"]
      },
      "associatedDomains": [
        "applinks:satsconnect.app",
        "applinks:www.satsconnect.app"
      ],
      "entitlements": {
        "com.apple.developer.associated-domains": true,
        "keychain-access-groups": ["$(AppIdentifierPrefix)com.satsconnect.wallet"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "package": "com.satsconnect.wallet",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "bitcoin"
            },
            {
              "scheme": "lightning"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-secure-store",
      "expo-camera",
      "expo-local-authentication"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
